            <shell:ApplicationBarIconButton IconUri="/icons/appbar.check.rest.png" Text="done" Click="btnDone_Click"/>
        </shell:ApplicationBar>
    </phone:PhoneApplicationPage.ApplicationBar>
-->
</Animation:AnimatedBasePage>
